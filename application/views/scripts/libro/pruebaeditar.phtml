       $( "#fecha" ).datepicker({ 
		 //autoSize: true,
            showOn: "button",
			buttonImage: "<?php echo $this->baseUrl; ?>/calendario/css/images/calendar.gif",
			buttonImageOnly: true,
                         minDate: fechain,
                maxDate:fechate,
            beforeShowDay: noSunday,
             numberOfMonths: 3,
            
               
     

