                var ano=<?php echo $idperiodo?>;
               
      
      var fechain='01-03-'+ano;
      var fechate='31-12-'+ano;
    
    
  
  function noSunday(date){
     var day = date.getDay();
     return [(day > 0), ''];
  }
  
   function cambiarfecha(tipo) {
        
     
      
      if(tipo=='1'){
      fechain='01-03-'+ano;
      fechate='31-08-'+ano;  
      }
      
       if(tipo=='2'){
      fechain='01-09-'+ano;
      fechate='31-12-'+ano;  
      }
       if(tipo=='3'){
      fechain='01-03-'+ano;
     fechate='31-05-'+ano;  
      }
       if(tipo=='4'){
      fechain='01-05-'+ano;
     fechate='30-09-'+ano;  
      }
       if(tipo=='5'){
      fechain='01-09-'+ano;
    fechate='31-12-'+ano;  
      }
    }
  
   $("#tipoEvaluacionPrueba").live('change',function (e) {
       $("#fecha").val('');
       $('#fecha').datepicker('destroy');
       cambiarfecha($(this).val());
