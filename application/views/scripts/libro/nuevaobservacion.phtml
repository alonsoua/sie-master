    $('#idAlumnos').change(function (evt, params) {

        var $s = $(this);


        if (params.selected && params.selected == "allc") {
            $s.children('option').not(':selected').each(function () {
                $(this).attr('disabled', 'disabled');
            });
        } else if (params.deselected && params.deselected == "allc") {
            $s.children('option').each(function () {
                $(this).removeAttr('disabled');
            });
        }

        if ((params.selected && params.selected != "allc") || (params.deselected && params.deselected != "allc")) {

            if ($(this).val() != null && $(this).val() != 'all') {
                $(this).find('option:eq(0)').attr('disabled', 'disabled');

            } else {
                $(this).find('option:eq(0)').removeAttr('disabled');

            }

        }
        $('#idAlumnos').trigger('chosen:updated');




    });

